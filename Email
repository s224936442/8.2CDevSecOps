pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                bat 'echo Cloning repository...'
                git branch: 'main', url: 'https://github.com/s224936442/8.2CDevSecOps.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'npm test || exit /b 0'
            }
            post {
    success {
        emailext(
            subject: "SUCCESS: ${env.JOB_NAME} - Test Stage (#${env.BUILD_NUMBER})",
            body: "The 'Run Tests' stage completed successfully.\nCheck Jenkins for full details.",
            to: "s224936442@deakin.edu.au",
            attachLog: true
        )
    }
    failure {
        emailext(
            subject: "FAILURE: ${env.JOB_NAME} - Test Stage (#${env.BUILD_NUMBER})",
            body: "The 'Run Tests' stage failed.\nCheck Jenkins for error details.",
            to: "s224936442@deakin.edu.au",
            attachLog: true
        )
    }
}
        }

        stage('Generate Coverage Report') {
            steps {
                bat 'npm run coverage || exit /b 0'
            }
        }

        stage('NPM Audit (Security Scan)') {
            steps {
                bat 'npm audit || exit /b 0'
            }
            post {
    success {
        emailext(
            subject: "SUCCESS: ${env.JOB_NAME} - Security Scan (#${env.BUILD_NUMBER})",
            body: "The 'NPM Audit (Security Scan)' stage completed successfully.\nCheck Jenkins for vulnerabilities report.",
            to: "s224936442@deakin.edu.au",
            attachLog: true
        )
    }
    failure {
        emailext(
            subject: "FAILURE: ${env.JOB_NAME} - Security Scan (#${env.BUILD_NUMBER})",
            body: "The 'NPM Audit (Security Scan)' stage failed.\nCheck Jenkins for details.",
            to: "s224936442@deakin.edu.au",
            attachLog: true
        )
    }
}
        }
    }
}
